# Docker Compose Environment Variables
# Copy this file to .env or set these variables in your shell

# Hera SDK Configuration
# Set to "true" to use Hera SDK (default in docker-compose), "false" for legacy YAML-based
USE_HERA_SDK=true

# Kubernetes Cluster Configuration
# Options: "auto" (auto-detect), "kind" (local KinD), "eks" (AWS EKS), "external" (other)
KUBERNETES_CLUSTER_TYPE=auto

# Path to kubeconfig directory (will be mounted to /root/.kube in container)
# Default: ~/.kube
KUBECONFIG_PATH=~/.kube

# Path to kubeconfig file inside container
# Default: /root/.kube/config
KUBECONFIG=/root/.kube/config

# Set to "true" if using local KinD cluster
# This enables Docker-specific network patches
KIND_CLUSTER=false

# Example configurations:

# For local KinD cluster:
# KUBERNETES_CLUSTER_TYPE=kind
# KIND_CLUSTER=true
# KUBECONFIG_PATH=~/.kube

# For AWS EKS cluster:
# KUBERNETES_CLUSTER_TYPE=eks
# KIND_CLUSTER=false
# KUBECONFIG_PATH=~/.kube

# For other external Kubernetes cluster:
# KUBERNETES_CLUSTER_TYPE=external
# KIND_CLUSTER=false
# KUBECONFIG_PATH=~/.kube

